{
  "name": "insight-overlay",
  "repository": {
    "type": "git",
    "url": "git@github.com:erynnb/insight-overlay.git"
  },
  "homepage": "https://github.com/erynnb",
  "authors": [
    "Erin B"
  ],
  "scripts": {
    "static": "eslint **/*.js **/*.html && polymer lint",
    "test": "npm run static"
  },
  "description": "InSight Overlay assets",
  "version": "1.0.0",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-ava": "^4.2.2",
    "eslint-plugin-html": "^3.1.1"
  },
  "nodecg": {
    "compatibleRange": "~1.0.0",
    "assetCategories": [
      {
        "name": "teamlogos",
        "title": "Team Scoreboard Logos",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "png"
        ]
      }
    ],
    "dashboardPanels": [
      {
        "name": "overlay",
        "title": "Scoreboard",
        "headerColor": "#2d4e8a",
        "file": "scoreboard-control.html",
        "width": 4
      },
      {
        "name": "roster-breakdown",
        "title": "Rosters",
        "headerColor": "#2d4e8a",
        "file": "roster-control.html",
        "width": 6
      }
    ],
    "graphics": [
      {
        "file": "index.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "soundCues": [
      {
        "name": "scoreboard-in",
        "assignable": false,
        "defaultFile": "sound/scoreboard-in.ogg"
      },
      {
        "name": "scoreboard-out",
        "assignable": false,
        "defaultFile": "sound/scoreboard-out.ogg"
      }
    ]
  }
}
